@model AboutVM

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url(/img/banner/@Model.Background.Image) !important">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Model.AboutUs.Header</h2>
                    <p>@Model.AboutUs.Content</p>
                    <p class="hidden-sm">@Model.AboutUs.ShortContent</p>
                    <a class="default-btn" href="#">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@Model.AboutUs.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Teacher teacher in Model.Teachers)
            {

                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher">
                        <div class="single-teacher-img">
                            <a href="teacher-details.html"><img src="img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="teacher-details.html">@teacher.Name</a></h2>
                            <h4>Associate Professor</h4>
                            <ul>
                                @foreach (AboutTeacher about in Model.AboutTeachers)
                                {
                                    if (teacher.AboutTeacherId == about.Id)
                                    {
                                        <li><a target="_blank" href="@about.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                        <li><a target="_blank" href="@about.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                        <li><a target="_blank" href="@about.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                                        <li><a target="_blank" href="@about.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                                    }
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                @foreach (Testimonial testimonial in Model.Testimonials)
                {

                    <div class="col-md-8 col-md-offset-2 col-sm-12">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="img/testimonial/@testimonial.Image" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@testimonial.Description</p>
                                    <h4>@testimonial.Name</h4>
                                    <h5>@testimonial.Speciality</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video" style="background-image:url(img/notice/@Model.NoticeVideo.Image)!important">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@Model.NoticeVideo.Link">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (NoticeBoard board in Model.NoticeBoards)
                        {

                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@board.Date.ToString("dd, MMM yyyy", CultureInfo.InvariantCulture)</h4>
                                <p>@board.Content</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
