@model TeacherVM
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center" style="background-image: url(/img/banner/@Model.Background.Image) !important">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (Teacher teacher in Model.Teachers)
            {

                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a href="teacher-details.html"><img src="img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="teacher-details.html">@teacher.Name</a></h2>
                            @foreach (AboutTeacher about in Model.AboutTeachers)
                            {
                                if (teacher.AboutTeacherId == about.Id)
                                {
                                    <h4>@about.Speciality</h4>
                                    <ul>
                                        <li><a target="_blank" href="@about.Facebook"><i class="zmdi zmdi-facebook"></i></a></li>
                                        <li><a target="_blank" href="@about.Pinterest"><i class="zmdi zmdi-pinterest"></i></a></li>
                                        <li><a target="_blank" href="@about.Vimeo"><i class="zmdi zmdi-vimeo"></i></a></li>
                                        <li><a target="_blank" href="@about.Twitter"><i class="zmdi zmdi-twitter"></i></a></li>
                                    </ul>
                                }
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->